source "https://rubygems.org"

ruby "2.2.0"

# Core
gem "rails", "4.2.0"
gem "pg"
gem "sass-rails", "~> 5.0"
gem "uglifier", ">= 1.3.0"
gem "coffee-rails", "~> 4.1.0"
gem "dotenv"

# Front End
gem "jquery-rails"
gem "turbolinks"
gem "jbuilder", "~> 2.0"
gem "sdoc", "~> 0.4.0", group: :doc

# Authentication
gem "devise"

# Server / Deployment
gem "unicorn"

# Testing
gem "factory_girl_rails"
gem "faker"

group :development, :test do
  gem "byebug"
  gem "web-console", "~> 2.0"
  gem "spring"
end

group :test do
  gem "rspec-rails"
  gem "capybara"
end

